<div class="jumbotron">
  <form id="mySurvey" class="myForm" action="/polls/create" method="post" data-toggle="validator">
    <div class="form-group row">
      <label for="question" class="col-sm-2">Question : </label>
      <div class="col-sm-5">
        <input type="text" name="question" class="form-control" id="question" placeholder="Type Your Survey Question here.." required>
      </div>
    </div>
    <div class="form-group row">
      <label for="option" class="col-sm-2">Options : </label>
      <div class="col-sm-5" id="answerDiv">
        <input type="text" name="option1" class="form-control" id="option1" placeholder="Option 1" required>
        <input type="text" name="option2" class="form-control" id="option2" placeholder="Option 2" required>
      </div>
      <span><button type="button" name="button" class="btn btn-success addBtn" id="addBtn"><i class="glyphicon glyphicon-plus"></i></button></span>
      <span><button type="button" name="button" class="btn btn-danger removeBtn" id="removeBtn"><i class="glyphicon glyphicon-minus"></i></button></span>
    </div>
    <div class="pull-right">
      <button type="submit" class="btn btn-default" id="submitSurvey">Submit</button>
    </div>
  </form>
</div>

<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header" style="background:#a30b1a;color:#ffffff;">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><i class="glyphicon glyphicon-alert"></i> Oh Snap</h4>
      </div>
      <div class="modal-body">
        <p id="errorMsg">This is a small modal.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
